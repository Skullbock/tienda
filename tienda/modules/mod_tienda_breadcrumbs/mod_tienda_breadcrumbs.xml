<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade" position="left" client="site">
	<name>Tienda - Breadcrumbs</name>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<version>0.10.1</version>
	<creationDate>October 2011</creationDate>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License</license>
	<description>MOD_TIENDA_BREADCRUMBS_MODULEDESC</description>
	<files>
		<filename module="mod_tienda_breadcrumbs">mod_tienda_breadcrumbs.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.mod_tienda_breadcrumbs.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field  name="showhome" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMSHOWHOME" description="MOD_TIENDA_BREADCRUMBS_PARAMSHOWHOMEDESC">
					<option value="0">COM_TIENDA_NO</option>
					<option value="1">COM_TIENDA_YES</option>
				</field>
				<field  name="hometext" type="text" default="Home" label="MOD_TIENDA_BREADCRUMBS_PARAMHOMETEXT" description="MOD_TIENDA_BREADCRUMBS_PARAMHOMETEXTDESC" />
				<field  name="showcatroot" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMSHOWCATROOT" description="MOD_TIENDA_BREADCRUMBS_PARAMSHOWCATROOTDESC">
					<option value="0">COM_TIENDA_NO</option>
					<option value="1">COM_TIENDA_YES</option>
				</field>
				<field  name="roottext" type="text" default="" label="MOD_TIENDA_BREADCRUMBS_PARAMROOTTEXT" description="MOD_TIENDA_BREADCRUMBS_PARAMROOTTEXTDESC" />
				<field  name="showLast" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMSHOWLAST" description="MOD_TIENDA_BREADCRUMBS_PARAMSHOWLASTDESC">
					<option value="0">COM_TIENDA_NO</option>
					<option value="1">COM_TIENDA_YES</option>
				</field>
				<field  name="linkself" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMLINKSELF" description="MOD_TIENDA_BREADCRUMBS_PARAMLINKSELFDESC">
					<option value="0">COM_TIENDA_NO</option>
					<option value="1">COM_TIENDA_YES</option>
				</field>
				<field  name="separator" type="text" default="" label="MOD_TIENDA_BREADCRUMBS_PARAMSEPARATOR" description="MOD_TIENDA_BREADCRUMBS_PARAMSEPARATORDESC" />
			</fieldset>
			
				<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field  name="cache" type="list" default="0" label="MOD_TIENDA_BREADCRUMBS_PARAMCACHE" description="MOD_TIENDA_BREADCRUMBS_PARAMCACHEDESC">
					<option value="0">Never</option>
				</field>
			</fieldset>
		
		</fields>
	</config>
	<params>
		<param name="showhome" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMSHOWHOME" description="MOD_TIENDA_BREADCRUMBS_PARAMSHOWHOMEDESC">
			<option value="0">COM_TIENDA_NO</option>
			<option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="hometext" type="text" default="Home" label="MOD_TIENDA_BREADCRUMBS_PARAMHOMETEXT" description="MOD_TIENDA_BREADCRUMBS_PARAMHOMETEXTDESC" />
		<param name="showcatroot" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMSHOWCATROOT" description="MOD_TIENDA_BREADCRUMBS_PARAMSHOWCATROOTDESC">
			<option value="0">COM_TIENDA_NO</option>
			<option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="roottext" type="text" default="" label="MOD_TIENDA_BREADCRUMBS_PARAMROOTTEXT" description="MOD_TIENDA_BREADCRUMBS_PARAMROOTTEXTDESC" />
		<param name="showLast" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMSHOWLAST" description="MOD_TIENDA_BREADCRUMBS_PARAMSHOWLASTDESC">
			<option value="0">COM_TIENDA_NO</option>
			<option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="linkself" type="radio" default="1" label="MOD_TIENDA_BREADCRUMBS_PARAMLINKSELF" description="MOD_TIENDA_BREADCRUMBS_PARAMLINKSELFDESC">
			<option value="0">COM_TIENDA_NO</option>
			<option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="separator" type="text" default="" label="MOD_TIENDA_BREADCRUMBS_PARAMSEPARATOR" description="MOD_TIENDA_BREADCRUMBS_PARAMSEPARATORDESC" />
		<param name="moduleclass_sfx" type="text" default="" label="MOD_TIENDA_BREADCRUMBS_PARAMMODULECLASSSUFFIX" description="MOD_TIENDA_BREADCRUMBS_PARAMMODULECLASSSUFFIXDESC" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="MOD_TIENDA_BREADCRUMBS_PARAMCACHE" description="MOD_TIENDA_BREADCRUMBS_PARAMCACHEDESC">
			<option value="0">Never</option>
		</param>
	</params>
</install>