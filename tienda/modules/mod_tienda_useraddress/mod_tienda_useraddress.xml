<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="tienda_user_main" client="administrator" method="upgrade">
	<name>Tienda - User Addresses</name>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<version>0.10.1</version>
	<creationDate>October 2011</creationDate>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License</license>
	<description>MOD_TIENDA_USERADDRESS_MODULEDESC</description>
	<files>
		<filename module="mod_tienda_useraddress">mod_tienda_useraddress.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_tienda_useraddress.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="spacer" />
				<field name="display_null" type="radio" default="1" label="MOD_TIENDA_USERADDRESS_DISPLAY_NO_ADDRESSES" description="MOD_TIENDA_USERADDRESS_DISPLAY_NO_ADDRESSES_DESC">
					<option value="0">COM_TIENDA_NO</option>
					<option value="1">COM_TIENDA_YES</option>
				</field>
				<field name="null_text" type="text" size="50" default="No Addresses Set" label="MOD_TIENDA_USERADDRESS_NO_ADDRESSES_SET" description="MOD_TIENDA_USERADDRESS_NO_ADDRESSES_TEXT_DESC"></field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
		<param type="spacer" />
		<param name="display_null" type="radio" default="1" label="MOD_TIENDA_USERADDRESS_DISPLAY_NO_ADDRESSES" description="MOD_TIENDA_USERADDRESS_DISPLAY_NO_ADDRESSES_DESC">
			<option value="0">COM_TIENDA_NO</option>
			<option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="null_text" type="text" size="50" default="No Addresses Set" label="MOD_TIENDA_USERADDRESS_NO_ADDRESSES_SET" description="MOD_TIENDA_USERADDRESS_NO_ADDRESSES_TEXT_DESC"></param>
	</params>
</install>